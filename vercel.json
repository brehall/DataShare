{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**", "../shared/schema/**"],
        "excludeFiles": [
          "dist/public/**",
          "server/**/*.test.ts",
          "server/**/*.spec.ts",
          "**/*.map",
          "node_modules/**/react/**",
          "node_modules/**/@radix-ui/**",
          "node_modules/**/framer-motion/**",
          "node_modules/**/vite/**"
        ]
      }
    },
    {
      "src": "dist/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ],
  "installCommand": "rm -rf node_modules && npm cache clean --force && npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {}
}